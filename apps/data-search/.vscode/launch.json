    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "firefox 3000",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}",
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "firefox 3001",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceRoot}/src",
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "firefox 3002",
            "url": "http://localhost:3002",
            "webRoot": "${workspaceRoot}/src",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "chrome 3001",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceRoot}/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
        {
            "name": "chrome 3000",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
        }
}]
}