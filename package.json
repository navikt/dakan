{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.22.1",
    "prettier": "^2.0.5"
  },
  "scripts": {
      "clean": "lerna clean -f --yes && rm -rf node_modules",
      "format_packages": "prettier --write \"packages/*/*/**/*.{js,jsx,ts,tsx}\"",
      "format": "yarn run format_packages",
      "storybook": "cd packages/shared/ui && yarn run storybook",
      "storybook:build": "cd packages/shared/ui && yarn run storybook:build",
      "storybook:deploy": "cd packages/shared/ui && yarn run storybook:deploy",
      "ui": "cd packages/shared/ui && yarn run start",
      "ui:build": "cd packages/shared/ui && yarn run build",
      "theme": "cd packages/shared/theme && yarn run start",
      "theme:build": "cd packages/shared/theme && yarn run build",
      "metrics": "cd packages/shared/metrics && yarn run start",
      "metrics:build": "cd packages/shared/metrics && yarn run build",
      "hooks": "cd packages/shared/hooks && yarn run start",
      "hooks:build": "cd packages/shared/hooks && yarn run build",
      "shared:build": "yarn run theme:build && yarn run ui:build && yarn run hooks:build && yarn run metrics:build",
      "shared": "yarn run theme && yarn run ui && yarn run hooks && yarn run metrics",
      "search": "cd apps/data-search && yarn run start",
      "person": "cd packages/viewers/person && yarn run start",
      "person:install": "cd packages/viewers/person && yarn install",
      "person:test": "cd packages/viewers/person && yarn test",
      "person:build": "cd packages/viewers/person && yarn run build",
      "team": "cd packages/viewers/team && yarn run start",
      "team:test": "cd packages/viewers/team && yarn test",
      "team:build": "cd packages/viewers/team && yarn run build",
      "productarea": "cd packages/viewers/productarea && yarn run start",
      "productarea:build": "cd packages/viewers/productarea && yarn run build",
      "productarea:test": "cd packages/viewers/productarea && yarn test",
      "tableau": "cd packages/viewers/tableau && yarn run start",
      "tableau:build": "cd packages/viewers/tableau && yarn run build",
      "tableau:test": "cd packages/viewers/tableau && yarn test",
      "term": "cd packages/viewers/term && yarn run start",
      "term:build": "cd packages/viewers/term && yarn run build",
      "term:test": "cd packages/viewers/term && yarn run test",
      "table": "cd packages/viewers/table && yarn run start",
      "kafka": "cd packages/viewers/kafka && yarn run start",
      "kafka:test": "cd packages/viewers/kafka && yarn test",
      "kafka:build": "cd packages/viewers/kafka && yarn run build",
      "setup": "npx lerna bootstrap"
  },
  "workspaces": {
    "packages": [
    "apps/*",
    "packages/**"
  ]
}
}
